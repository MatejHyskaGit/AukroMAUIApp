<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AukroMAUIApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AukroMAUIApp"
    xmlns:view="clr-namespace:AukroMAUIApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate view:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Create new user"
        ContentTemplate="{DataTemplate view:CreateUserPage}"
        Route="CreateUserPage" />
    <ShellContent
        Title="Create new item"
        ContentTemplate="{DataTemplate view:CreateItemPage}"
        Route="CreateItemPage" />
    <ShellContent
        Title="Details"
        ContentTemplate="{DataTemplate view:DetailsPage}"
        Route="DetailsPage" />
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate view:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title="Successful Logout"
        ContentTemplate="{DataTemplate view:LoggedOutPage}"
        Route="LoggedOutPage" />

</Shell>
